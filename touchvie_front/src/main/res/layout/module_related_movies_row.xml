<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/module_related_movies_row_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/module_related_movies_row_photo_height"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/module_related_movies_row_photo"
        android:layout_width="@dimen/module_related_movies_row_photo_width"
        android:layout_height="@dimen/module_related_movies_row_photo_height"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/module_margin"
        android:orientation="vertical"
        android:paddingTop="@dimen/module_padding">

        <TextView
            android:id="@+id/module_related_movies_row_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/module_related_movies_row_title" />

        <TextView
            android:id="@+id/module_related_movies_row_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/module_related_movies_row_subtitle" />
    </LinearLayout>
</LinearLayout>