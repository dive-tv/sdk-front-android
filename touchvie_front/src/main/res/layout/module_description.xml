<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/module_description_padding">

    <TextView
        android:id="@+id/module_description_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/module_description_margin"
        android:textAllCaps="true"
        android:textSize="@dimen/module_description_title" />

    <TextView
        android:id="@+id/module_description_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        android:textSize="@dimen/module_description_body" />

    <FrameLayout
        android:id="@+id/module_description_source_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/stroke"
        android:layout_marginBottom="@dimen/module_description_margin"
        android:layout_marginTop="@dimen/module_description_margin"
        android:background="@android:color/darker_gray"
        android:visibility="visible" />

    <TextView
        android:id="@+id/module_description_source"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/module_description_source"
        android:visibility="visible" />

</LinearLayout>