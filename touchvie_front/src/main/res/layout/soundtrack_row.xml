<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simageitems_container"
    android:layout_width="@dimen/simageitems_image_height"
    android:layout_height="@dimen/simageitems_image_height"
    android:background="@color/seafoamBlue"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="SongTitle"
            android:id="@+id/soundtrack_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/CardSongAutor"
            android:id="@+id/soundtrack_author"/>
    </LinearLayout>

</FrameLayout>