<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simageitems_container"
    android:layout_width="@dimen/simageitems_image_height"
    android:layout_height="wrap_content"
    android:background="@color/darkGrey"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/simageitems_image_height"
        android:layout_height="@dimen/simageitems_image_height"
        android:layout_marginBottom="@dimen/stroke"
        android:background="@color/black">

        <ImageView
            android:id="@+id/cast_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:scaleType="centerCrop" />
    </FrameLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cast_namebox_height"
        android:paddingLeft="@dimen/cast_padding_left_right"
        android:paddingRight="@dimen/cast_padding_left_right"
        android:background="@color/black"
        android:layout_marginBottom="@dimen/cast_name_mbottom">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="left"
            style="@style/MinicardTitleLight"
            android:id="@+id/cast_name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/simageitems_data_height"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingEnd="@dimen/simageitems_data_padding_right"
        android:paddingLeft="@dimen/simageitems_data_padding_left"
        android:paddingRight="@dimen/simageitems_data_padding_right"
        android:paddingStart="@dimen/simageitems_data_padding_left">

        <TextView
            android:id="@+id/cast_interprets"
            style="@style/CardMovieGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:gravity="left"
            android:text="@string/interpretes"/>

        <TextView
            android:id="@+id/cast_character"
            style="@style/MinicardTitleLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:gravity="left"/>
    </LinearLayout>

</LinearLayout>